@model ControlStock.Models.Proveedor

@{
    ViewData["Title"] = "Borrar";
    Layout = "~/Views/Shared/_LayoutContainer.cshtml";
}

<h1>Borrar Proveedor</h1>

<h3>Está Ud seguro que quiero borrar este Registro?</h3>
<div>
    <h4>Proveedor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProveedorName)
        </dd>
        <dt class = "col-sm-2">
           Dirección:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProveedorAdress)
        </dd>
        <dt class = "col-sm-2">
            Teléfono:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProveedorPhone)
        </dd>
        <dt class="col-sm-2">
            E-Mail:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProveedorMail)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProveedorId" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver al listado</a>
    </form>
</div>
