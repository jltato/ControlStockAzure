@model IEnumerable<ControlStock.Models.Rubro>

@{
    ViewData["Title"] = "Rubros";
    Layout = "~/Views/Shared/_LayoutContainer.cshtml";
}


<div class="col-md-8">
    <h1>Rubros</h1>
    <p>
        <a asp-action="Create">Agregar Rubro</a>
    </p>
    <table class="table table-hover " id="tabla1" style="width:100%">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdRubro" style="text-decoration: none; color:black" data-bs-toggle="tooltip" data-bs-title="Editar">
                            <i class="fa fa-pencil-square-o"></i>
                        </a> |

                        <a asp-action="Delete" asp-route-id="@item.IdRubro" style="text-decoration: none; color:black" data-bs-toggle="tooltip" data-bs-title="Eliminar">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    var table = new DataTable('#tabla1', {
        language: {
            url: '../../lib/DataTables/Language.json',
        },
        scrollY: "40vh",
        deferRender: true,
        scroller: true
    });
</script>
